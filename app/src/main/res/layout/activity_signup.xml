<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/papa_main"
    tools:context="com.subin.papastamp.LoginActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/mainText"
        android:scaleType="fitStart"
        android:layout_marginTop="20dp"
        android:src="@drawable/papa_text"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/emailInput"
        android:layout_centerHorizontal="true"
        android:textColor="#E0FFFF"
        android:hint="E-Mail"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_bg"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/mainText"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/passwordInput"
        android:layout_centerHorizontal="true"
        android:hint="Password"
        android:textColor="#E0FFFF"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_bg"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/emailInput"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/passwordConfirmInput"
        android:layout_centerHorizontal="true"
        android:hint="Password-Confirm"
        android:textColor="#E0FFFF"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_bg"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/passwordInput"/>

    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/phoneNumberInput"
        android:layout_centerHorizontal="true"
        android:hint="Phone-Number"
        android:textColor="#E0FFFF"
        android:paddingLeft="10dp"
        android:background="@drawable/edit_bg"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/passwordConfirmInput"/>

    <RelativeLayout
        android:id="@+id/authLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingLeft="14dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:layout_below="@+id/phoneNumberInput">

        <EditText
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/authNumberInput"
            android:layout_alignParentLeft="true"
            android:paddingLeft="10dp"
            android:textColor="#E0FFFF"
            android:background="@drawable/edit_bg" />

        <Button
            android:id="@+id/authBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:text="인증번호 요청"
            android:textSize="14sp" />
    </RelativeLayout>

    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:id="@+id/regButton"
        android:background="@drawable/registration_button"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/authLayout"/>
</RelativeLayout>